<script src="/socket.io/socket.io.js"></script>
<script>
    var socket = io()
    socket.on("exchange-data", function(data){
        switch(data.index){
            case 1:
            if (data.alarm)
                alert("ssfd")
            case 2:
            $('h3').html(data.value)
        }  
    })
    socket.on("exchange-data2", function(data){
        switch(data.index){
            case 1:
            $("h4").html(data.value)
            case 2:
            $('h5').html(data.value)
        }  
    })
    $(document).ready(function(){
        $("#btn").click(function(){
                $.get('/about', (req, res) =>{
                res.render('about');
                })
            });
    });

</script>

<div id="googleMap" style="width: 100%;;height: 800px;;"></div>

<script>
        function myMap() {
        var hcmut = {lat: 10.772895, lng: 106.659809}
        var bienhoa = {lat: 10.956918, lng: 106.865269}
        var map = new google.maps.Map(document.getElementById("googleMap"),{
            center: hcmut,
            zoom:7,
        })
        const marker = new google.maps.Marker({
            position: {lat: 10.772895, lng: 106.659809}, 
            map: map,
        })
        const marker2 = new google.maps.Marker({
            position: bienhoa,
            map: map,
        })
        const infoWindow = new google.maps.InfoWindow({
            content: "Bach Khoa Station: <br> Pressure: <h2></h2> <br>  Temperature: <h3></h3>",
            disableAutoPan: true,
        });
        const infoWindow2 = new google.maps.InfoWindow({
            content: "Bien Hoa Station: <br> Pressure: <h4></h4> <br>  Temperature: <h5></h5>",
            disableAutoPan: true,
        });
        marker.addListener("click", () => {
          infoWindow.open(map, marker);
        });
        marker2.addListener("click", ()=>{
            infoWindow2.open(map, marker2);
        })
    }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAzvltrCjv8ibLJoTqfRtTH78thyf8hLyw&callback=myMap" type="text/javascript"></script>